  run_tests:
    docker:
      - image: cimg/python:3.9.2
    steps:
      - checkout 
      - run:
          name: Create a virutal environment
          command: |
            python3 -m venv venv
      - run:
          name: Activate venv
          command: |
            source venv/bin/activate
      - run:
          name: Install django
          command: |
            pip install -r requirements.txt
      - run:
          name: Run tests
          command: |
            mkdir test-results
            python manage.py test
      - store_test_results:
          path: test-results
      - store_artifacts:
          path: test-results